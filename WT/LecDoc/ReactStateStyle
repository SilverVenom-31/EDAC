Person.css-

.Person{
    width:60%;
    margin:16px auto;
    border: 1px solid #eee;
    box-shadow: 0 2px 3px #ccc;
    padding: 16 px;
    text-align: center;
}


Person.js-

import React from 'react';
import './Person.css'
const person = (props) => {
return(
    <div className='Person'>
 <p>Hi i am {props.name} and {props.age} years old lucky number is {Math.floor(Math.random() * 20)}</p>
 <p>{props.children}</p>

<input onChange={props.change} value={props.name} />
    </div>
);
}
export default person;



