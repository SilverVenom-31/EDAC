Data Binding with User input

App.js-



state= {
    uname :'',

    persons:[
      {name:"Shri",age:30},
      {name:"Soha",age:20},
      {name:"Arnav",age:40},
   ]
  }

btnHandler = (newname) =>{

this.setState({
 persons:[
      {name:newname,age:3},
      {name:"BEta",age:2},
      {name:"GaMA",age:4},
         ]
})

}

// event is the event object , javascript object 

inputHandler =(event) => {
this.setState({uname:event.target.value}
);
 
}

    render() {
     return (
      <div className="App">
         <h1> Hi, Welcome to React</h1>

          Name : <input
		  value={this.state.uname} 
		  onChange={this.inputHandler}>
		  </input>
		  Hellow -{this.state.uname}
<br><br>
           <button onClick={ () => this.btnHandler("Savita")}>Switch Button</button>
         <Person name={this.state.persons[0].name} age={this.state.persons[0].age}/>
         <Person name={this.state.persons[1].name} age={this.state.persons[1].age}>Hobbies : Coding </Person>
         <Person name={this.state.persons[2].name} age={this.state.persons[2].age}/>
      </div>
    ); 
  }


this thing we did is "Two Way Binding"

