    persons:[
      {name:"Shri",age:30},
      {name:"Soha",age:20},
      {name:"Arnav",age:40},
   ]
  }

btnHandler = (newname) =>{
 
this.setState({
 persons:[
      {name:newname,age:3},
      {name:"BEta",age:2},
      {name:"GaMA",age:4},
         ]
})

}

inputHandler =(event) => {
thgis.setState({
 persons:[
      {name:newname,age:3},
      {name:event.target,age:2},
      {name:"GaMA",age:4},
         ]
})}
    render() {
     return (
      <div className="App">
         <h1> Hi, Welcome to React</h1>
           <button onClick={ () => this.btnHandler("Savita")}>Switch Button</button>
         <Person name={this.state.persons[0].name} age={this.state.persons[0].age}/>
         <Person name={event.target.value}  age={this.state.persons[1].age}>Hobbies : Coding </Person>
         <Person name={this.state.persons[2].name} age={this.state.persons[2].age}/>
      </div>
    ); 
